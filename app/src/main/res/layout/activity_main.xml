<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- Button row: centered at the top and stays centered after rotation -->
    <LinearLayout
        android:id="@+id/button_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_yellow"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:text="YELLOW"
            android:textAllCaps="true"
            android:textColor="@color/black"
            app:backgroundTint="@color/yellow" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_red"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:text="RED"
            android:textAllCaps="true"
            android:textColor="@color/white"
            app:backgroundTint="@color/red" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_green"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="GREEN"
            android:textAllCaps="true"
            android:textColor="@color/white"
            app:backgroundTint="@color/green" />
    </LinearLayout>

    <!-- Center message that scales with available space -->
    <TextView
        android:id="@+id/status_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/white"
        android:maxLines="1"
        android:includeFontPadding="false"

        android:textSize="48sp"

        app:autoSizeTextType="uniform"
        app:autoSizeMinTextSize="50sp"
        app:autoSizeMaxTextSize="72sp"
        app:layout_constraintTop_toBottomOf="@id/button_row"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>